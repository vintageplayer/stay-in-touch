{
  "manifest_version": 3,
  "name": "Bare-Bones",
  "version": "0.1",
  "description": "A basic Chrome Extension",
  "action": {
    "default_popup": "basic_toggle.html",
    "default_icon": "brand_logo.png"
  },
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["background_switcher.js"]
    }
  ]
}